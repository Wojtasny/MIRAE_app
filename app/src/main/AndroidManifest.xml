<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wojtekadam.mirae" >

    <application
        android:configChanges="keyboardHidden|orientation"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity
            android:name="com.wojtekadam.mirae.MainScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- All User Activity -->
        <activity
            android:name=".AllUsersActivity"
            android:label="All Users"
            >
        </activity>

        <!-- Add User Activity-->
        <activity
            android:name=".NewUserActivity"
            android:label="Add New User" >
        </activity>

        <!-- Edit User Activity-->
        <activity

            android:name=".EditUserActivity"
            android:label="Edit User" >
        </activity>

        <!-- Kalendarz -->
        <activity
            android:name=".PickADateActivity"
            android:label="Kalendarz">
        </activity>

        <!-- Wybór po wybraniu użytkownika -->
        <activity
            android:name=".UserOptionActivity"
            android:label="Opcje">
        </activity>

        <!-- Podawanie symptomów -->
        <activity
            android:name=".SymptomsActivity"
            android:label="@string/Symptomy">
        </activity>

        <!-- Wyswietlanie wizyt -->
        <activity
            android:name=".VisitsActivity"
            android:label="@string/Visits">
        </activity>
        <activity android:name=".QueueActivity"
            android:label="Kolejka"
            />

    </application>

    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>


