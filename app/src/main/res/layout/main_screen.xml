<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <!--  Sample Dashboard screen with Two buttons -->
    <!--  Button to view all users screen -->


    <!--  Button to create a new product screen -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:text="@string/DajPESEL"
        android:textColor="@color/dark_gray"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="35dip"
        android:id="@+id/text"
        android:layout_gravity="center"
        android:layout_above="@+id/inputPESEL"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/healthcare"
        android:layout_above="@+id/text"
        android:layout_centerHorizontal="true" />

    <EditText android:id="@+id/inputPESEL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/dark_gray"
        android:textSize="30dip"
        android:inputType="numberDecimal"
        android:layout_weight="0.28"
        android:layout_above="@+id/btnContinue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/btnContinue"
        android:layout_width="307dp"
        android:layout_height="65dp"
        android:textColor="@color/white"
        android:textSize="25dip"
        android:text="@string/btnContinue"
        android:clickable="true"
        android:background="@color/dark_gray"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />


</RelativeLayout>
